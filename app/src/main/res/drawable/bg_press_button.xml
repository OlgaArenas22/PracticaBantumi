<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado PRESIONADO (efecto de "hundirse") -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD"/> <!-- un poco mÃ¡s claro -->
            <corners android:radius="16dp"/>
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp"/>
            <stroke android:color="#000000" android:width="1dp"/>
        </shape>
    </item>

    <!-- Estado NORMAL (con sombra) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="16dp"/>
            <stroke android:color="#000000" android:width="1dp"/>
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
            <size android:width="72dp" android:height="72dp"/>
        </shape>
    </item>

</selector>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/temasRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragmentos.TemasFragment">

    <LinearLayout
        android:id="@+id/previewBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/previewPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:padding="12dp"
            android:text="@string/txtPlayer2"
            android:fontFamily="@font/monofonto"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="RtlCompat,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>

                    <TextView style="@style/Widget.Bantumi.Button"
                        android:background="@drawable/pit_bg_selector"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="4"/>
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/previewPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:padding="12dp"
            android:text="@string/txtPlayer1"
            android:textSize="20sp"
            android:fontFamily="@font/monofonto"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectorZona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/bg_temas_panel"
        android:padding="12dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/headerSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tituloSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/temas_titulo"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:fontFamily="@font/super_comic"/>

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/holo_red_dark"
                android:contentDescription="@string/temas_cerrar"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/white"/>
        </RelativeLayout>

        <GridLayout
            android:id="@+id/gridTemas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClasico"
                style="@style/ConfirmButtonStyle"
                android:minWidth="128dp"
                android:layout_gravity="center"
                android:text="@string/tema_clasico"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerde"
                style="@style/ConfirmButtonStyle"
                android:minWidth="128dp"
                android:layout_gravity="center"
                android:text="@string/tema_verde"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAzul"
                style="@style/ConfirmButtonStyle"
                android:minWidth="128dp"
                android:layout_gravity="center"
                android:text="@string/tema_azul"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRojo"
                style="@style/ConfirmButtonStyle"
                android:minWidth="128dp"
                android:layout_gravity="center"
                android:text="@string/tema_rojo"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMorado"
                style="@style/ConfirmButtonStyle"
                android:minWidth="128dp"
                android:layout_gravity="center"
                android:text="@string/tema_morado"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNegro"
                style="@style/ConfirmButtonStyle"
                android:minWidth="128dp"
                android:layout_gravity="center"
                android:text="@string/tema_negro"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNeon"
                style="@style/ConfirmButtonStyle"
                android:minWidth="128dp"
                android:layout_gravity="center"
                android:text="@string/tema_neon"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDorado"
                style="@style/ConfirmButtonStyle"
                android:minWidth="128dp"
                android:layout_gravity="center"
                android:text="@string/tema_dorado"/>
        </GridLayout>
    </LinearLayout>

</RelativeLayout>

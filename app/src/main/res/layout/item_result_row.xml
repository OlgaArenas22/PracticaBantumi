<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_row_root"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="@color/saves_games_background"
    android:layout_marginBottom="2dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <!-- Col 1: PosiciÃ³n / Trofeo con sombra -->
    <FrameLayout
        android:layout_width="72dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/row_pos_icon_shadow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:translationX="1dp"
            android:translationY="1dp"
            android:alpha="0.35"
            app:tint="#000000"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/row_pos_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/row_pos_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:includeFontPadding="false"/>
    </FrameLayout>

    <!-- Col 2: Nombre (IZQUIERDA) -->
    <TextView
        android:id="@+id/row_player_name"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|start"
        android:paddingStart="4dp"
        android:textStyle="bold"
        android:fontFamily="@font/monofonto"
        android:textColor="@color/white"
        android:singleLine="true"
        android:ellipsize="end"
        android:includeFontPadding="false"/>

    <!-- Col 3: Corona (centrada) -->
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/row_crown_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/txtCorona"/>
    </FrameLayout>

    <!-- Col 4: J1 (centrado) -->
    <TextView
        android:id="@+id/row_seeds_p1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/monofonto"
        android:textColor="@color/white"
        android:includeFontPadding="false"/>

    <!-- Col 5: J2 (centrado) -->
    <TextView
        android:id="@+id/row_seeds_p2"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/monofonto"
        android:textColor="@color/white"
        android:includeFontPadding="false"/>

    <!-- Col 6: Modo (centrado) -->
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/row_mode_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:contentDescription="@string/txtModoJuego"/>
    </FrameLayout>

    <!-- Col 7: Tiempo (centrado) -->
    <TextView
        android:id="@+id/row_time_text"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:fontFamily="@font/monofonto"
        android:textColor="@color/white"
        android:includeFontPadding="false"/>

    <!-- Col 8: Fecha (centrado) -->
    <TextView
        android:id="@+id/row_date_text"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:fontFamily="@font/monofonto"
        android:textColor="@color/white"
        android:includeFontPadding="false"/>
</LinearLayout>

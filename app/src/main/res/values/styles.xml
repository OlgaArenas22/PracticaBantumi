<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Bantumi.Button" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:text">0</item>
        <!-- item name="android:background">@color/black</item -->
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">0dp</item>
        <!--  Asocia la acción al pulsar sobre un hueco -->
        <item name="android:onClick">huecoPulsado</item>
    </style>
    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/super_comic</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="TransparentDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Quita rellenos que añade Material al fondo del diálogo -->
        <item name="backgroundInsetStart">0dp</item>
        <item name="backgroundInsetEnd">0dp</item>
        <item name="backgroundInsetTop">0dp</item>
        <item name="backgroundInsetBottom">0dp</item>
    </style>
    <style name="ConfirmButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/monofonto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bg_confirm_button</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:elevation">4dp</item>
    </style>


</resources>